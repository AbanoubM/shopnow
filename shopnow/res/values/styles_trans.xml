<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Trans" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_trans</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Trans</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Trans</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Trans</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Trans</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Trans</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_trans</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_trans</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Trans</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarDivider">@null</item>
    </style>

    <style name="ActionBar.Solid.Trans" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_trans</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_trans</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_trans</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Trans</item>
    </style>

    <style name="ActionBar.Transparent.Trans" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_trans</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Trans</item>
    </style>

    <style name="PopupMenu.Trans" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_trans</item>
    </style>

    <style name="DropDownListView.Trans" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_trans</item>
    </style>

    <style name="ActionBarTabStyle.Trans" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_trans</item>
    </style>

    <style name="DropDownNav.Trans" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_trans</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_trans</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_trans</item>
    </style>

    <style name="ProgressBar.Trans" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_trans</item>
    </style>

    <style name="ActionButton.CloseMode.Trans" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_trans</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Trans.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Trans</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Trans</item>
    </style>

</resources>